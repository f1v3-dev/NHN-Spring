<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="com.nhnacademy.edu.springframework.dooray.aop.ElapsedTimeAspect" level="INFO"/>

    <root level="OFF">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>